{
  "version": 2,
  "buildCommand": "npm install -g pnpm@8.15.0 && pnpm install --no-frozen-lockfile && pnpm run build",
  "outputDirectory": "apps/search-server/public",
  "functions": {
    "api/mcp.js": {
      "memory": 512,
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production",
    "ALLOWED_ORIGIN": "https://chatgpt.com"
  },
  "rewrites": [
    { "source": "/mcp", "destination": "/api/mcp" },
    { "source": "/mcp/(.*)", "destination": "/api/mcp" }
  ]
}