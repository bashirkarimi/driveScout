{
  "version": 2,
  "buildCommand": "npm ci && npm run build",
  "outputDirectory": "apps/search-server/public",
  "installCommand": "npm install",
  "functions": {
    "api/mcp.js": {
      "memory": 512,
      "maxDuration": 30,
      "includeFiles": [
        "packages/search-widget/dist/widget.js",
        "packages/search-widget/dist/widget-style.css",
        "apps/search-server/public/car-widget.html",
        "apps/search-server/src/**"
      ]
    }
  },
  "env": {
    "NODE_ENV": "production",
    "ALLOWED_ORIGIN": "https://chatgpt.com"
  },
  "rewrites": [
    { "source": "/mcp", "destination": "/api/mcp" },
    { "source": "/mcp/(.*)", "destination": "/api/mcp" }
  ]
}