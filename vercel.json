{
  "version": 2,
  "buildCommand": "corepack enable && corepack prepare pnpm@9.15.1 --activate && pnpm install --frozen-lockfile && pnpm run build",
  "installCommand": "echo 'Skipping install phase'",
  "outputDirectory": "apps/search-server/public",
  "functions": {
    "api/mcp.js": {
      "memory": 512,
      "maxDuration": 30,
      "includeFiles": "{packages/search-widget/dist/**,apps/search-server/public/**,apps/search-server/src/**}"
    }
  },
  "env": {
    "NODE_ENV": "production",
    "ALLOWED_ORIGIN": "https://chatgpt.com"
  },
  "rewrites": [
    {
      "source": "/mcp",
      "destination": "/api/mcp"
    },
    {
      "source": "/mcp/(.*)",
      "destination": "/api/mcp"
    }
  ]
}