{
  "version": 2,
  "buildCommand": "pnpm vercel-build",
  "installCommand": "pnpm install --frozen-lockfile",
  "rewrites": [
    {
      "source": "/mcp",
      "destination": "/api/mcp"
    },
    {
      "source": "/mcp/:path*",
      "destination": "/api/mcp"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "ALLOWED_ORIGIN": "https://chatgpt.com"
  },
  "functions": {
    "api/mcp.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  }
}
