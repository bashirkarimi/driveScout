{
  "version": 2,
  "buildCommand": "pnpm install --frozen-lockfile && pnpm run build",
  "outputDirectory": "apps/search-server/public",
  "installCommand": "pnpm install --frozen-lockfile",
  "functions": {
    "api/mcp.js": {
      "memory": 512,
      "maxDuration": 30,
      "includeFiles": "{packages/search-widget/dist/**,apps/search-server/public/**,apps/search-server/src/**}"
    }
  },
  "env": {
    "NODE_ENV": "production",
    "ALLOWED_ORIGIN": "https://chatgpt.com"
  },
  "rewrites": [
    { "source": "/mcp", "destination": "/api/mcp" },
    { "source": "/mcp/(.*)", "destination": "/api/mcp" }
  ]
}