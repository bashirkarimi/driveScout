{
  "version": 2,
  "buildCommand": "npm install && npm run build",
  "outputDirectory": "apps/search-server/public",
  "installCommand": "npm install",
  "functions": {
    "api/mcp.js": {
      "memory": 512,
      "maxDuration": 30,
      "environment": {
        "NODE_ENV": "production",
        "ALLOWED_ORIGIN": "https://chatgpt.com"
      }
    }
  },
  "rewrites": [
    { "source": "/mcp", "destination": "/api/mcp" },
    { "source": "/mcp/(.*)", "destination": "/api/mcp" }
  ]
}